<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/player1Layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorDark"
        android:gravity="center" >

        <TextView
            android:id="@+id/timerPlayer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fnt1"
            android:rotation="180"
            android:shadowColor="@color/black"
            android:shadowRadius="2"
            android:text="10:00"
            android:textColor="@color/colorGray"
            android:textSize="120sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/moveCountPlayer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/player1Layout"
            android:layout_below="@id/timerPlayer1"
            android:layout_marginTop="10dp"
            android:fontFamily="monospace"
            android:rotation="180"
            android:shadowColor="@color/black"
            android:shadowRadius="2"
            android:text="@string/p1_move"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDark"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp" >

        <ImageView
            android:id="@+id/resetButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/_shap"
            android:padding="8dp"
            android:src="@drawable/rs" />

        <ImageView
            android:id="@+id/playPauseButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/_shap"
            android:contentDescription="Play/Pause"
            android:padding="6dp"
            android:src="@drawable/ps" />

        <ImageView
            android:id="@+id/setTimeButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/_shap"
            android:contentDescription="Set Timer"
            android:padding="5dp"
            android:src="@drawable/tm" />

        <ImageView
            android:id="@+id/soundToggleButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/_shap"
            android:contentDescription="Toggle Sound"
            android:padding="4dp"
            android:src="@drawable/son" />

        <ImageView
            android:id="@+id/colorButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/_shap"
            android:contentDescription="Color choose"
            android:padding="4dp"
            android:src="@drawable/clr" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/player2Layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorDark"
        android:gravity="center" >

        <TextView
            android:id="@+id/timerPlayer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fnt1"
            android:shadowColor="@color/black"
            android:shadowRadius="2"
            android:text="10:00"
            android:textColor="@color/colorGray"
            android:textSize="120sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/moveCountPlayer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/timerPlayer2"
            android:layout_alignRight="@+id/timerPlayer2"
            android:layout_marginBottom="10dp"
            android:fontFamily="monospace"
            android:shadowColor="@color/black"
            android:shadowRadius="2"
            android:text="@string/p2_move"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>